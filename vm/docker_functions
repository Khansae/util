#!/usr/bin/env bash

# run image
# $1 image
# $2 host port
# $3 container port
# $4 container name
# [$5] host ip (127.0.0.1 otherwise)
docker_run_publish_ports() {
    local host_port=${2}
    local container_port=${3}
    local host_ip=${5-127.0.0.1}
    docker run -p $host_ip:$host_port:$container_port --name $4 $1
}
